label secondGameLobby:
    if times == 1:
        call start_second_game pass (color0="#ff0000", colors1=["#ffa500", "#ffae00", "#ff009d", "#ff0000"])
    elif times == 2:
        call start_second_game pass (color0="#9ccbf1", colors1=["#4d7ec7", "#9ccbf1", "#0f737a", "#fcd912"])
    elif times == 3:
