        hide D_candidate3
        with dissolve
    elif current_stage == 2:
        hide A_candidate1
        hide A_candidate2
        hide A_candidate3
        with dissolve
    elif current_stage == 3:
        hide SE_candidate1
        hide SE_candidate2
        hide SE_candidate3
        with dissolve
    elif current_stage == 4:
        hide SA_candidate1
        hide SA_candidate2
        hide SA_candidate3
        with dissolve
    $ current_stage += 1
    scene black with dissolve
    jump firstGameLobby
screen firstGame ():
    $ imagesAlign = 0.2
    for i in range(3):
        frame:
            xalign imagesAlign
            yalign 0.8
            hbox:
                xalign 2.0
                yalign 2.0
                
                textbutton names[i] action [SetVariable("chosen_point", points[i]), Return()]
        $ imagesAlign += 0.3
